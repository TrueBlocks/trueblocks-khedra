root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_style = tab
indent_size = 4

[*.html]
indent_size = 2

# Go template files in app/templates/ contain mixed syntax
[app/templates/*.html]
# Disable certain validation for template files
insert_final_newline = true
trim_trailing_whitespace = true
